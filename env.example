# Copy this file to ".env" and adjust the values for your environment.

# MySQL configuration
MYSQL_ROOT_PASSWORD=changeme_root_password
MYSQL_DATABASE=wordpress_db
MYSQL_USER=wp_user
MYSQL_PASSWORD=changeme_user_password

# MySQL port used inside Docker (keep in sync with docker-compose.yml)
MYSQL_TCP_PORT=52000

# WordPress database connection (should match the MySQL service and credentials above)
WORDPRESS_DB_HOST=wp_db:52000
WORDPRESS_DB_USER=${MYSQL_USER}
WORDPRESS_DB_PASSWORD=${MYSQL_PASSWORD}
WORDPRESS_DB_NAME=${MYSQL_DATABASE}
WORDPRESS_PORT=8070

# phpMyAdmin connection (should also match the MySQL service and credentials)
PMA_HOST=wp_db:52000
PMA_USER=${MYSQL_USER}
PMA_PASSWORD=${MYSQL_PASSWORD}
PMA_PORT=8071


